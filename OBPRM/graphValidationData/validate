#!/bin/sh
 arg="_"
 arg=$arg$1
 echo $arg
user=`whoami`
if test  $arg = "_"
then
  arg="warn"
fi
 host=`hostname`
CVSROOT=":pserver:pinga@drwatson.cs.tamu.edu:/research/drwatson/dsmft/CVS"
export CVSROOT

if test  $host = "blackwidowers" 
then
   dir=/research/sunburn/dsmft/OBPRM/graphValidationData
   scratch=$dir/$user.scratch.linux
   p=perl
   os="linux"
   m=/usr/bin/elm
fi
if test  $host = "parasol"
then
   m=/usr/bin/elm
   dir=/research/sunburn/dsmft/OBPRM/graphValidationData
  PATH=$PATH:/usr/local/bin/
  export PATH
   scratch=$dir/$user.scratch.hp
   p=/usr/local/bin/perl
   os="hp"
fi

if test  $host = "dove"
then
   m=/usr/local/bin/elm
   dir=/pub/dsmft3/OBPRM/graphValidationData
   PATH=/pub/dsmft1/Software/sun/bin/:/usr/local/bin:/share/gnu/bin:/share/SUNWspro/bin:/usr/ccs/bin:/usr/bin:/sbin:/usr/sbin
  export PATH
  TMPDIR=/tmp
  export TMPDIR
   scratch=$dir/$user.scratch.sun
   p=/usr/local/bin/perl
   os="sun"
  ls $p 
fi

if test  $host = "marple"
then
   m=/usr/local/bin/elm
   dir=/pub/dsmft3/OBPRM/graphValidationData
  PATH=$PATH:/usr/freeware/bin/
   scratch=$dir/$user.scratch.sgi
   p=perl
   os="sgi"
   export CVSROOT=":pserver:pinga@drwatson.cs.tamu.edu:/research/drwatson/dsmft/CVS"
fi
 

   #mkdir $scratch
   if test $arg = "_no-warn" 
   then
   $p $dir/bin/validateGraph_h   -cvs $dir 
    $m  -s "obprm  finished on $os" pinga@cs.tamu.edu<< _EOF_
    Finished on $os 
_EOF_
   fi
   if test $arg != "_no-warn" 
   then
    $p $dir/validateGraph_h  -email -cvs $dir 
   fi
  rm -rf $scratch
