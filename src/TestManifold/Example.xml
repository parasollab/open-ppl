<?xml version='1.0' encoding='UTF-8'?>
<MotionPlanning>
  <MPProblem>
    <Environment filename="manifold.env"/>

    <DistanceMetrics>
      <Euclidean label="euclidean"/>
    </DistanceMetrics>

    <ValidityCheckers>
      <CollisionDetection label="cd" method="PQP_SOLID"/>
      <AlwaysTrueValidity label="always_true"/>
    </ValidityCheckers>

    <NeighborhoodFinders>
      <BruteForceNF label="BFNF" k="5" dmLabel="euclidean"/>
    </NeighborhoodFinders>

    <Samplers>
      <UniformRandomSampler label="UniformRandom" vcLabel="cd"/>
    </Samplers>

    <Connectors>
      <NeighborhoodConnector label="Closest" nfLabel="BFNF" CheckIfSameCC="false" lpLabel="sl" unconnected="true"/>
    </Connectors>

    <LocalPlanners>
      <StraightLine label="sl" binaryEvaluation="true" vcLabel="cd"/>
    </LocalPlanners>

    <MapEvaluators>
      <ConditionalEvaluator label="NodesEval" metric_method="NumNodes" value="100" operator=">=" />
    </MapEvaluators>

    <Metrics>
      <NumNodesMetric label="NumNodes" />
    </Metrics>

    <MPStrategies>
      <BasicPRM label="BasicPRM">
        <node_generation_method Method="UniformRandom" Number="10" Attempts="10"/>
        <node_connection_method Method="Closest"/>
        <evaluation_method Method="NodesEval"/>
      </BasicPRM>
      <ClearanceTest label="ClearanceTest" dmLabel="euclidean" debug="true">
        <node_generation_method Method="UniformRandom" Number="5" Attempts="100"/>
        <clearance vcLabel="cd" dmLabel="euclidean" clearanceType="exact" penetrationType="exact" useBBX="true" positional="false"/>
        <clearance vcLabel="cd" dmLabel="euclidean" clearanceType="exact" penetrationType="exact" useBBX="false" positional="true"/>
        <!--
        <clearance vcLabel="cd" dmLabel="euclidean" clearanceType="approx" clearanceRays="7" penetrationType="exact" stepSize="10" resolution="1" useBBX="true" positional="false" debug="true" />
        -->
        <clearance vcLabel="cd" dmLabel="euclidean" clearanceType="approx" clearanceRays="1" penetrationType="approx" penetrationRays="1" useBBX="true" positional="false"/>
        <clearance vcLabel="cd" dmLabel="euclidean" clearanceType="approx" clearanceRays="10" penetrationType="approx" penetrationRays="10" useBBX="true" positional="false"/>
      </ClearanceTest>
    </MPStrategies>

    <Solver mpStrategyLabel="BasicPRM" seed="1234567" baseFilename="Basic"/>
    <!--
    <Solver mpStrategyLabel="ClearanceTest" seed="1234567" baseFilename="Basic"/>
    -->
  </MPProblem>
</MotionPlanning>

