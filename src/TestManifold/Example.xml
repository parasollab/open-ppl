<?xml version='1.0' encoding='UTF-8'?>
<motion_planning>
  <VizmoDebug filename="Basic"/>
  <MPProblem>

    <environment input_env="manifold.env">
      <robot Cfg_name="Cfg_free" num_joints="3" pos_dof="3" dofs="11"> 
        <boundary type="bbox" translational_scale="1">
          <parameter id="0" Label="x" type="translational" min="-25" max="25" />
          <parameter id="1" Label="y" type="translational" min="-15" max="15" />
          <parameter id="2" Label="z" type="translational" min="-25" max="25" />
          <parameter id="3" Label="j1" type="rotational" min="0" max="1" />
          <parameter id="4" Label="j2" type="rotational" min="0" max="1" />
          <parameter id="5" Label="j3" type="rotational" min="0" max="1" />
          <parameter id="6" Label="j4" type="rotational" min="0" max="1" />
          <parameter id="7" Label="x" type="translational" min="-25" max="25" />
          <parameter id="8" Label="y" type="translational" min="-15" max="15" />
          <parameter id="9" Label="t" type="rotational" min="0" max="1" />
          <parameter id="10" Label="j5" type="rotational" min="0" max="1" />
        </boundary>
      </robot>
      <!-- Example input, resolution defaults computed automatically
           NOTE Use larger pos_re_factor with MARPM, Default is still small.
      <resolution pos_res="0.10" ori_res="0.20"/>
      <resolution pos_res_factor="0.2" ori_res_factor="0.05"/>
       -->
    </environment>

    <distance_metrics>
      <euclidean Label="euclidean"/>
    </distance_metrics>    

    <validity_test>    
      <CollisionDetection Label="cd1" method="RAPID" />
    </validity_test>

    <NeighborhoodFinder>
      <BFNF Label="BFNF" dm_method="euclidean"/>
    </NeighborhoodFinder>
    <MPRegions/>
  </MPProblem>

  <MPStrategy>  
    <node_generation_methods>
      <UniformRandomSampler Label="UniformRandomFree" vc_method="cd1"
        debug="false"/>
    </node_generation_methods>

    <connection_methods>
      <NeighborhoodConnection Label="Closest" nf="BFNF" k="5"
        CheckIfSameCC="false" lp_method="sl" unconnected="false"
        debug="false"/>
    </connection_methods>

    <lp_methods>
      <StraightLine Label="sl" length="0" binary_search="1" vc_method="cd1"/>
    </lp_methods>

    <MPEvaluator_methods>
      <MPRegionConditionalEvaluators>
        <NumNodesEvaluation Label="NodesEval" size="100" />
        <PrintMapEvaluation Label="PrintMap" base_name="Basic" />
      </MPRegionConditionalEvaluators>
    </MPEvaluator_methods>

    <MPStrategyMethod Controller="BasicPRM1">
      <!-- Basic PRM where num samples is based on Number -->
      <BasicPRM Label="BasicPRM1" seed="1234567" filename="Basic">
        <node_generation_method Method="UniformRandomFree" Number="10" Attempts="10"/>
        <node_connection_method Method="Closest"/>
        <evaluation_method Method="NodesEval"/>
      </BasicPRM>
    </MPStrategyMethod> 
  </MPStrategy>
</motion_planning>
