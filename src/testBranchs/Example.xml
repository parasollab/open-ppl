<?xml version='1.0' encoding='UTF-8'?>
<motion_planning>
  <VizmoDebug filename="Basic"/>
  
  <MPProblem>
    <environment input_env="branchs.env">
      <robot Cfg_name="Cfg_free_tree" num_joints="5" pos_dof="3" dofs="11"> 
        <boundary type="bbox" translational_scale="1">
          <parameter id="0" Label="x" type="translational" min="-30" max="30" />
          <parameter id="1" Label="y" type="translational" min="-40" max="40" />
          <parameter id="2" Label="z" type="translational" min="-60" max="60" />
        </boundary>
      </robot>
    </environment>

    <distance_metrics>
       <euclidean Label="euclidean"/>
    </distance_metrics>    

    <validity_test>    
      <CollisionDetection Label="cd" method="RAPID" />
    </validity_test>

    <NeighborhoodFinder>
      <BFNF Label="BFNF" dm_method="euclidean"/>
    </NeighborhoodFinder>

    <MPRegions/>
  </MPProblem>
  
  <MPStrategy>  
    <node_generation_methods>
      <UniformRandomSampler Label="UniformRandomFree" vc_method="cd"/>
      <ObstacleBasedSampler Label="OBPRM_cM" vc_method="cd" usebbx="true" point_selection="cM" dm_method="euclidean" n_shells_free="3" n_shells_coll="0" step_size="0.05"/>
      <ObstacleBasedSampler Label="OBPRM_rV" vc_method="cd" usebbx="true" point_selection="rV" dm_method="euclidean" n_shells_free="3" n_shells_coll="0" step_size="0.05"/>
    </node_generation_methods>

    <connection_methods>
      <NeighborhoodConnection Label="Closest" nf="BFNF" k="5" CheckIfSameCC="false" lp_method="sl"/>
      <ConnectCCs Label="ConnectCCs" smallcc="5" kpairs="5" nf="BFNF" lp_method="sl"/>
      <NeighborhoodConnection Label="ConnectFirst" nf="BFNF" k="1" CheckIfSameCC="false" lp_method="sl" unconnected="true"/>
    </connection_methods>

    <lp_methods>
      <StraightLine Label="sl" length="0" binary_search="1" vc_method="cd"/>
    </lp_methods>

    <MPEvaluator_methods>
      <MPRegionConditionalEvaluators>
        <NumNodesEvaluation Label="NodesEval" size="100"/>
        <QueryEvaluation Label="Query" filename="branchs.query" dm_method="euclidean" outpath="Basic" lp_method="sl">
          <node_connection_method Method="ConnectFirst"/>
        </QueryEvaluation>
        <PrintMapEvaluation Label="PrintMap" base_name="Basic" />
      </MPRegionConditionalEvaluators>
    </MPEvaluator_methods>

    <MPStrategyMethod Controller="BasicPRM">
      <BasicPRM Label="BasicPRM" seed="1234567" filename="Basic" iterations="1" dm_method="euclidean">
        <node_generation_method Method="UniformRandomFree" Number="10"/>
        <node_generation_method Method="OBPRM_cM" Number="20"/>
        <node_generation_method Method="OBPRM_rV" Number="20"/>
        <node_connection_method Method="Closest"/>
        <component_connection_method Method="ConnectCCs"/>
        <evaluation_method Method="PrintMap"/>
        <evaluation_method Method="Query"/>
      </BasicPRM>
    </MPStrategyMethod>
  </MPStrategy>
</motion_planning>

