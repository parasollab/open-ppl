<?xml version='1.0' encoding='UTF-8'?>
<motion_planning>
  <VizmoDebug filename="Basic"/>
  <MPProblem>

    <environment input_env="narrow.env">
      <robot Cfg_name="Cfg_fixed_tree" num_joints="3" pos_dof="0" dofs="3"> 
        <boundary type="bbox" translational_scale="2">
          <parameter id="0" Label="x" type="translational" min="-7" max="7" />
          <parameter id="1" Label="y" type="translational" min="-7" max="7" />
          <parameter id="2" Label="z" type="translational" min="-7" max="7" />
        </boundary>
      </robot>
    </environment>

    <distance_metrics>
      <euclidean Label="euclidean"/>
      <rmsd Label="rmsd" />
    </distance_metrics>    

    <validity_test>    
      <CollisionDetection Label="cd_rapid" method="RAPID" />
    </validity_test>

    <NeighborhoodFinder>
      <BFNF Label="BFNF" dm_method="euclidean"/>
    </NeighborhoodFinder>
    
    <MPRegions/>
  
  </MPProblem>

  <MPStrategy>  
    <node_generation_methods>
      <UniformRandomSampler Label="UniformRandomFree" vc_method="cd_rapid"/>
    </node_generation_methods>

    <connection_methods>
      <NeighborhoodConnection Label="Closest" nf="BFNF" k="10" CheckIfSameCC="true" lp_method="sl"/>
      <ConnectCCs Label="ConnectCCs" smallcc="5" kpairs="2" kclosest="0" nf="BFNF" lp_method="sl"/>
      <NeighborhoodConnection Label="ConnectFirst" nf="BFNF" k="5" CheckIfSameCC="false" lp_method="sl" unconnected="true"/>
    </connection_methods>

    <lp_methods>
      <StraightLine Label="sl" length="0" binary_search="1" vc_method="cd_rapid"/>
    </lp_methods>

    <MPEvaluator_methods>
      <MPRegionConditionalEvaluators>
        <NumNodesEvaluation Label="NodesEval" size="1000" />
        <NumEdgesEvaluation Label="EdgesEval" size="1000" />
        <QueryEvaluation Label="Query" filename="narrow.query" dm_method="euclidean" outpath="Basic" lp_method="sl">
          <node_connection_method Method="ConnectFirst"/>
        </QueryEvaluation>
        <PrintMapEvaluation Label="PrintMap" base_name="Basic" />
      </MPRegionConditionalEvaluators>
    </MPEvaluator_methods>


    <MPStrategyMethod Controller="BasicPRM1">


      <!-- Basic PRM where num samples is based on Number -->
      <BasicPRM Label="BasicPRM1" seed="1234567" filename="Basic" iterations="1" dm_method="euclidean">
        <node_generation_method Method="UniformRandomFree" Number="100" Attempts="10"/>
        <node_connection_method Method="Closest"/>
        <component_connection_method Method="ConnectCCs"/>
        <evaluation_method Method="PrintMap"/>
        <evaluation_method Method="Query"/>
      </BasicPRM>

    </MPStrategyMethod> 
  </MPStrategy>
</motion_planning>
