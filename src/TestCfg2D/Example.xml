<?xml version='1.0' encoding='UTF-8'?>
<motion_planning>
  <MPProblem>
    <environment input_env="narrow.env">
      <robot Cfg_name="Cfg_2D" num_joints="0" pos_dof="2" dofs="2"> 
        <boundary type="bbox" translational_scale="1">
      	 <parameter id="0" Label="x" type="translational" min="-15" max="15" />
      	 <parameter id="1" Label="y" type="translational" min="-15" max="15" />
        </boundary>
      </robot>
    </environment>
    <distance_metrics>
       <euclidean Label="euclidean"/>
    </distance_metrics>    
    <validity_test>    
      <CollisionDetection Label="cd" method="RAPID" />
      <CollisionDetection Label="cd2" method="VCLIP" />
      <ObstacleClearance Label="oc" vc_method="cd2" dm_method="euclidean"
        clearance_type="exact" clearance_rays="20"
        use_bbx="true" obst_clearance="2.5" positional="true"/>
    </validity_test>
    <NeighborhoodFinder>
      <BruteForceNF Label="BFNF" dmMethod="euclidean"/>
    </NeighborhoodFinder>
  <MPRegions/>
  </MPProblem>
  <MPStrategy>  
    <node_generation_methods>
      <UniformRandomSampler Label="UniformRandom" vcMethod="cd"/>
    </node_generation_methods>
    <connection_methods>
      <NeighborhoodConnection Label="Closest" nf="BFNF" k="5" CheckIfSameCC="false" lp_method="sl" unconnected="true"/>
    </connection_methods>
    <lp_methods>
      <StraightLine Label="sl" binary_search="1" vc_method="cd"/>
    </lp_methods>
    <MPEvaluator_methods>
      <ConditionalEvaluation Label="NodesEval" metric_method="NumNodes" value="100" operator=">=" />
    </MPEvaluator_methods>
    <MetricMethods>
      <NumNodesMetric Label="NumNodes" />
    </MetricMethods>
    <MPStrategyMethod Controller="BasicPRM">
      <BasicPRM Label="BasicPRM" seed="1234567" filename="Basic">
        <node_generation_method Method="UniformRandom" Number="10" Attempts="10"/>
        <node_connection_method Method="Closest"/>
        <evaluation_method Method="NodesEval"/>
      </BasicPRM>
    </MPStrategyMethod>
  </MPStrategy>
</motion_planning>

