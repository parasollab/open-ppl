<?xml version='1.0' encoding='UTF-8'?>
<MotionPlanning>
  <MPProblem>
    <Environment input_env="narrow.env">
      <robot Cfg_name="Cfg_2D" num_joints="0" pos_dof="2" dofs="2"> 
        <boundary type="bbox" translational_scale="1">
          <parameter id="0" label="x" type="translational" min="-15" max="15" />
          <parameter id="1" label="y" type="translational" min="-15" max="15" />
        </boundary>
      </robot>
    </Environment>

    <DistanceMetrics>
      <Euclidean label="euclidean"/>
    </DistanceMetrics> 

    <ValidityCheckers>    
      <CollisionDetection label="cd" method="RAPID" />
    </ValidityCheckers>
    
    <NeighborhoodFinders>
      <BruteForceNF label="BFNF" dmMethod="euclidean"/>
    </NeighborhoodFinders>
    
    <Samplers>
      <UniformRandomSampler label="UniformRandom" vcMethod="cd"/>
    </Samplers>
    
    <Connectors>
      <NeighborhoodConnector label="Closest" nf="BFNF" k="5" CheckIfSameCC="false" lp_method="sl" unconnected="true"/>
    </Connectors>
    
    <LocalPlanners>
      <StraightLine label="sl" binaryEvaluation="true" vcLabel="cd"/>
    </LocalPlanners>
    
    <MapEvaluators>
      <ConditionalEvaluator label="NodesEval" metric_method="NumNodes" value="100" operator=">=" />
    </MapEvaluators>
    
    <Metrics>
      <NumNodesMetric label="NumNodes" />
    </Metrics>
    
    <MPStrategies>  
      <BasicPRM label="BasicPRM">
        <node_generation_method Method="UniformRandom" Number="10" Attempts="10"/>
        <node_connection_method Method="Closest"/>
        <evaluation_method Method="NodesEval"/>
      </BasicPRM>
    </MPStrategies>

    <Solver mpStrategyLabel="BasicPRM" seed="1234567" baseFilename="Basic"/>
  </MPProblem>
</MotionPlanning>

