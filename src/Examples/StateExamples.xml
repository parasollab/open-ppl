<?xml version='1.0' encoding='UTF-8'?>
<MotionPlanning warnings="true" warningsAsErrors="true" print="false">
  <MPProblem>

    <Environment filename="2DState/2d.env"/>
    <DistanceMetrics>
      <WeightedEuclidean label="weuclidean" posWeight="0.4" rotWeight="0.4"
        velWeight="0.1" avlWeight="0.1"/>
    </DistanceMetrics>

    <ValidityCheckers>
      <CollisionDetection label="cd1" method="RAPID"/>
    </ValidityCheckers>

    <NeighborhoodFinders>
      <BruteForceNF label="Nearest" dmLabel="weuclidean" unconnected="false" k="1"/>
    </NeighborhoodFinders>

    <Extenders>
      <KinodynamicExtender label="FixedBest" dmLabel="weuclidean" vcLabel="cd1"
        timeStep="30.0" fixed="true" best="true"/>
      <KinodynamicExtender label="FixedRandom" dmLabel="weuclidean" vcLabel="cd1"
        timeStep="30.0" fixed="true" best="false"/>
      <KinodynamicExtender label="VaryBest" dmLabel="weuclidean" vcLabel="cd1"
        timeStep="30.0" fixed="false" best="true"/>
      <KinodynamicExtender label="VaryRandom" dmLabel="weuclidean" vcLabel="cd1"
        timeStep="30.0" fixed="false" best="false"/>
    </Extenders>

    <Metrics>
      <NumNodesMetric label="NumNodes"/>
    </Metrics>

    <MapEvaluators>
      <ConditionalEvaluator label="NodesEval" metric_method="NumNodes" value="30" operator=">="/>
      <RRTQuery label="RRTQuery" queryFile="2DState/2d.query" goalDist="5" dmLabel="weuclidean"
            debug="false" /> 
    </MapEvaluators>

    <MPStrategies>

      <!-- KinodynamicRRT -->
      <KinodynamicRRTStrategy label="KRRTQuery" growthFocus="0.05" minDist="0.01" 
        dmLabel="weuclidean" nfLabel="Nearest" vcLabel="cd1"
        extenderLabel="FixedRandom" debug="false">
        <Evaluator label="RRTQuery"/>
      </KinodynamicRRTStrategy>

      <!-- KinodynamicRRT -->
      <KinodynamicRRTStrategy label="KRRTNodes" growthFocus="0.05" minDist="0.01" 
        dmLabel="weuclidean" nfLabel="Nearest" vcLabel="cd1"
        extenderLabel="FixedRandom" debug="false">
        <Evaluator label="NodesEval"/>
      </KinodynamicRRTStrategy>

    </MPStrategies>

    <Solver mpStrategyLabel="KRRTQuery" seed="12345678"  baseFilename="KRRT" vizmoDebug="true"/>

  </MPProblem>
</MotionPlanning>
