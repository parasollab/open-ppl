<?xml version='1.0' encoding='UTF-8'?>
<MotionPlanning warnings="true" warningsAsErrors="true" print="false">

  <!-- Here we specify input files, such as environment and query. The
       'baseFilename in the Problem node is for Simulator stat output only. -->
  <Problem baseFilename="example">

    <Environment filename="3D/3d.env"/>

    <Robot label="boxy-1" filename="3D/boxy.robot">
      <Agent type="planning"/>
    </Robot>

    <Robot label="boxy-2" filename="3D/boxy.robot">
      <Agent type="planning"/>
    </Robot>

    <RobotGroup label="robotGroup" robotLabels="boxy-1 boxy-2"/>

    <GroupTask label="groupQuery" group="robotGroup">
      <Task label="query-1" robot="boxy-1">
        <StartConstraints>
          <CSpaceConstraint point="0 0 0 0 0 0"/>
        </StartConstraints>

        <GoalConstraints>
          <CSpaceConstraint point="20 5 10 0.2 0.8 0.5"/>
        </GoalConstraints>
      </Task>

      <Task label="query-2" robot="boxy-2">
        <StartConstraints>
          <CSpaceConstraint point="0 0 5 0 0 0"/>
        </StartConstraints>

        <GoalConstraints>
          <CSpaceConstraint point="20 -5 10 0.2 0.8 0.5"/>
        </GoalConstraints>
      </Task>
    </GroupTask>

  </Problem>

  <!-- Set available algorithms and parameters. -->
  <Library>

    <DistanceMetrics>
      <Euclidean label="euclidean"/>
    </DistanceMetrics>

    <ValidityCheckers>
      <CollisionDetection label="rapid" method="RAPID"/>
      <CollisionDetection label="pqp" method="PQP"/>
      <CollisionDetection label="pqp_solid" method="PQP_SOLID"/>
    </ValidityCheckers>

    <NeighborhoodFinders>
      <BruteForceNF label="BFNF" dmLabel="euclidean" unconnected="false" k="40"/>
      <BruteForceNF label="Nearest" dmLabel="euclidean" unconnected="false"
        k="1"/>
      <OptimalNF label="Optimal" dmLabel="euclidean" unconnected="false" nfType="k"/>
    </NeighborhoodFinders>

    <Samplers>
      <UniformRandomSampler label="UniformRandom" vcLabel="alwaysTrue"/>
      <UniformRandomSampler label="UniformRandomFree" vcLabel="pqp_solid"/>
    </Samplers>

    <LocalPlanners>
      <StraightLine label="sl" binaryEvaluation="true" vcLabel="pqp_solid"/>
      <StraightLine label="slAlwaysTrue" binaryEvaluation="true"
        vcLabel="alwaysTrue"/>
    </LocalPlanners>

    <Extenders>
      <BasicExtender label="BERO" debug="false" dmLabel="euclidean"
        vcLabel="rapid" maxDist="1." minDist=".001"/>
    </Extenders>

    <PathModifiers>
    </PathModifiers>

    <Connectors>
      <NeighborhoodConnector label="Closest" nfLabel="BFNF" lpLabel="sl"
        checkIfSameCC="true" debug="false"/>
      <NeighborhoodConnector label="ClosestOptimal" debug="false"
        nfLabel="Optimal" lpLabel="sl" checkIfSameCC="false"/>
      <CCsConnector label="CCsConnector" nfLabel="BFNF" lpLabel="sl" debug="false"/>
    </Connectors>

    <Metrics>
      <NumNodesMetric label="NumNodes"/>
    </Metrics>

    <MapEvaluators>
      <TimeEvaluator label="TimeEval" timeout="10"/>
      <ConditionalEvaluator label="NodesEval" metric_method="NumNodes"
        value="500" operator=">="/>
      <ConditionalEvaluator label="EdgesEval" metric_method="NumEdges"
        value="1000" operator=">"/>

      <QueryMethod label="IndividualQuery" debug="false"
        safeIntervalToolLabel="SI"/>
      <GroupQuery label="CompositeQuery"/>
      <GroupDecoupledQuery label="DecoupledQuery" queryLabel="IndividualQuery"
        debug="false"/>

      <ComposeEvaluator label="BoundedIndividualQuery" operator="or">
        <Evaluator label="NodesEval"/>
        <Evaluator label="IndividualQuery"/>
      </ComposeEvaluator>

      <ComposeEvaluator label="BoundedCompositeQuery" operator="and">
        <Evaluator label="NodesEval"/>
        <Evaluator label="CompositeQuery"/>
      </ComposeEvaluator>

      <ComposeEvaluator label="BoundedDecoupledQuery" operator="or">
        <Evaluator label="NodesEval"/>
        <Evaluator label="DecoupledQuery"/>
      </ComposeEvaluator>
    </MapEvaluators>


    <MPStrategies>
      <BasicPRM label="IndividualPRM" debug="false">
        <Sampler label="UniformRandomFree" number="10" attempts="1"/>
        <Connector label="Closest"/>
        <Evaluator label="BoundedIndividualQuery"/>
      </BasicPRM>

      <GroupPRM label="CompositePRM" debug="false">
        <Sampler label="UniformRandomFree" number="10" attempts="1"/>
        <Connector label="Closest"/>
        <Connector label="CCsConnector"/>
        <Evaluator label="BoundedCompositeQuery"/>
      </GroupPRM>

      <GroupDecoupledStrategy label="DecoupledPRM" strategyLabel="IndividualPRM" debug="false">
        <Evaluator label="DecoupledQuery"/>
      </GroupDecoupledStrategy>

      <GroupPRM label="CompositePRMstar" debug="true">
        <Sampler label="UniformRandomFree" number="1" attempts="1"/>
        <Connector label="ClosestOptimal"/>
        <Evaluator label="BoundedCompositeQuery"/>
      </GroupPRM>

    </MPStrategies>

    <MPTools>
      <SafeIntervalTool label="SI" vcLabel="pqp_solid"/>

      <!-- We won't need these until the topological tools are updated to
           support robot groups.
      <TetGenDecomposition label="coarse" debug="false" switches="pnQ"
        io="read" baseFilename="3D/coarse"/>
      <TetGenDecomposition label="fine" debug="false" switches="pnqQ"
        io="read" baseFilename="3D/quality"/>
      -->
    </MPTools>

    <!-- MPProblem allows multiple solvers to be specified and executed. -->

    <Solver mpStrategyLabel="CompositePRMstar" seed="12345678"
      baseFilename="coupled-star" vizmoDebug="true"/>

  </Library>

</MotionPlanning>
